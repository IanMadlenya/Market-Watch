<% if flash[:alert] %>
<p id="notice"><%= flash[:alert] %>
</p> <% end %>
<%= form_tag do %> 
<fieldset>
<legend>Please Log In</legend>
<div>
<img src="http://www.offthegridnews.com/wp-content/uploads/2014/08/stock-market-stockrockandroll.jpg" alt="Market Watch" style="width:500px;height:300px" align="right">
<%= label_tag :user_name, 'Name:' %>
<%= text_field_tag :user_name, params[:user_name] %>


</div>
<div>
<%= label_tag :password, 'Password:' %>
<%= password_field_tag :password, params[:password] %>
</div>
<div>
</br>
<%= submit_tag "Login" %> </div>
</br>
<%= link_to 'Sign up', new_user_path %>
</fieldset> 
<% end %>



<h2>About Market Watch</h2>

<p> What's happening in the financial markets? Monitor your portfolio by getting real time alerts on quantitative data(price, percentage change, graphs etc) and qualitative data through twitter sentiment analysis. </p>




