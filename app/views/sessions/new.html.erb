<% if flash[:alert] %>
<p id="notice"><%= flash[:alert] %>
</p> <% end %>
<%= form_tag do %> 
<fieldset id = "backLayer">
<legend></br>Please Log In</legend>
<div>

<%= label_tag :user_name, 'Name:' %>
<%= text_field_tag :user_name, params[:user_name] %>


</div>
<div>
<%= label_tag :password, 'Password:' %>
<%= password_field_tag :password, params[:password] %>
</div>
<div>
</br>
<%= submit_tag "Login" %> </div>
</br>
<%= link_to 'Sign up', new_user_path %>
</fieldset> 
<% end %>



