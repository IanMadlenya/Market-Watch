<%- model_class = Portfolio -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Stock name</th>
      <th>Stock symbol</th>
      <th>Last Trade Price</th>
      <th>Number Shares</th>
      <th>Stock graph</th>
      <th colspan="3"></th>
    </tr>
  </thead>


<tbody>
    <% @portfolio.line_items.each do |item| %>
      <tr>
        <td><%= item.stock.stock_name %></td>
        <td><%= item.stock.stock_symbol %></td>
        <td><%= item.stock.price %></td>   
        <td><%= item.number_shares %></td>
        <td><%= link_to 'Show', item.stock %></td>    
      </tr>
    <% end %>
  </tbody>
  <%= button_to 'Logout', logout_path, :method => :delete %>
</table>
<%= link_to 'Back', portfolios_path %>
<%= link_to 'Add New Investment', stocks_path%>
<%= link_to t('.Add New Investment', :default => t("helpers.links.new")),
             stocks_path,
            :class => 'btn btn-primary' %>








