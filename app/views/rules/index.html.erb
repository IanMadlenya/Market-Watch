<p id="notice"><%= notice %></p>

<h1>Listing Rules</h1>


<table class="table table-striped">
  <thead>
    <tr>
      <th>Target price</th>
      <th>Portfolio</th>
      <th>Stock </th>
      <th>Stock Symbol</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rules.each do |rule| %>
      <tr>
        <td><%= rule.target_price %></td>
        <td><%= rule.stock.stock_name %></td>
        <td><%= rule.stock.stock_symbol %></td>
      
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Rule', new_user_rule_path(current_user) %>
