<%= form_for(@rule) do |f| %>
  <% if @rule.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@rule.errors.count, "error") %> prohibited this rule from being saved:</h2>

      <ul>
      <% @rule.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Rule Type" %>
    <%= f.select(:type, options_for_select([["Target Price", "LastPriceRule"], ["Twitter Sentiment", "SentimentRule"]]), :prompt => 'Select One') %>   
  </div>

  <div class="field">
    <%= f.label "Rule Type" %>
    <%= f.select(:compare, options_for_select([["Greater than equal to", ">="], ["Less than equal to", "<="]])) %>   
  </div>

  <div class="field">
    <%= f.label "Target" %>
    <%= f.number_field :target_price %>
  </div>

  <div class="field">
    <%= f.label :stock_symbol %>
    <%= f.text_field :stock_symbol %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
