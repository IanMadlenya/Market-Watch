<% require 'yahoofinance' %>
<p id="notice"><%= notice %></p>

<h1>Listing Stocks</h1>

<table>
  <thead>
    <tr>
      <th>Stock name</th>
      <th>Stock symbol</th>
      <th>Last Trade Price</th>
      <th>Change Today</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.stock_name %></td>
        <td><%= stock.stock_symbol %></td>
        <td><%= stock.price %></td>
        <td><%= "#{((1-(stock.price / stock.open))*100).round(2)}%" %></td>
        <td><%= link_to 'Show', stock %></td>
        <td><%= link_to 'Add to portfolio', line_items_path(stock_id: stock) %></td>
        <td><%= link_to 'Edit', edit_stock_path(stock) %></td>
        <td><%= link_to 'Destroy', stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Stock', new_stock_path %>
