<%= form_for @stock, :html => { :class => "form-horizontal stock" } do |f| %>

    <% if @stock.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@stock.errors.count, "error") %> prohibited this stock from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @stock.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :stock_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :stock_name, :class => 'form-control' %>
    </div>
    <%= error_span(@stock[:stock_name]) %>
  </div>
  <div class="control-group">
    <%= f.label :stock_symbol, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :stock_symbol, :class => 'form-control' %>
    </div>
    <%= error_span(@stock[:stock_symbol]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            stocks_path, :class => 'btn btn-default' %>

<% end %>
